#ifndef World_h
#define World_h

#include "Entity.h"
#include <oogl/Texture.h>
#include <list>

class World : public Entity {
	/**
	 * Fields
	 */
	public:
		std::list<Entity*> entities;
	private:
		static oogl::Texture* texture;
		GLUquadric *qobj;
	/**
	 * Constructor / Destructor
	 */
	public:
		World(GLfloat radius = 100);
		virtual ~World();
	/**
	 * Methods
	 */
	public:
		virtual void draw();
		virtual void update();
};

#endif
